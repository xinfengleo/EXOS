<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:clipToPadding="false"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/sv_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <!--全局選項-->
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@color/title_backColor"
                    android:text="全局選項"
                    android:padding="5dp"
                    />
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    >
                    <com.gamebot.sdk.view.CheckBoxEx
                        style="?android:checkboxStyle"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="領取郵件"
                        app:defaultValue="false"
                        app:uniqueKey="領取郵件" />
                    <com.gamebot.sdk.view.CheckBoxEx
                        style="?android:checkboxStyle"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="成就領取"
                        app:defaultValue="false"
                        app:uniqueKey="成就領取" />
                    <com.gamebot.sdk.view.CheckBoxEx
                        style="?android:checkboxStyle"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="8小時一抽"
                        app:defaultValue="false"
                        app:uniqueKey="8小時一抽" />
                </LinearLayout>
            </LinearLayout>
            <!--日常選項-->
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@color/title_backColor"
                    android:text="日常選項"
                    android:padding="5dp"
                    />
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    >
                    <com.gamebot.sdk.view.CheckBoxEx
                        style="?android:checkboxStyle"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="工會簽到"
                        app:defaultValue="false"
                        app:uniqueKey="工會簽到" />
                    <com.gamebot.sdk.view.CheckBoxEx
                        style="?android:checkboxStyle"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="七日獎勵"
                        app:defaultValue="false"
                        app:uniqueKey="七日獎勵" />
                    <com.gamebot.sdk.view.CheckBoxEx
                        style="?android:checkboxStyle"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="在線時長獎勵"
                        app:defaultValue="false"
                        app:uniqueKey="在線時長獎勵" />
                </LinearLayout>
            </LinearLayout>
            <!--探索任務-->
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@color/title_backColor"
                    android:text="探索任務"
                    android:padding="5dp"
                    />
                <!--英雄經驗本-->
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        >
                        <com.gamebot.sdk.view.CheckBoxEx
                            android:id="@+id/cb_tansuo"
                            style="?android:checkboxStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="探索任務"
                            app:defaultValue="false"
                            app:uniqueKey="探索任務" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:id="@+id/ll_tansuo"
                        android:visibility="gone"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:orientation="horizontal"
                            android:paddingLeft="40dp"
                            android:paddingRight="40dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="等待體力回復時長："
                                android:gravity="center"
                                />
                            <com.gamebot.sdk.view.EditTextEx
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:inputType="number"
                                android:textColor="#fff"
                                android:singleLine="true"
                                android:maxLength="3"
                                app:uniqueKey="等待體力回復時長"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="分鐘"
                                android:gravity="center"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!--任务排程-->
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@color/title_backColor"
                    android:text="任務排程"
                    android:padding="5dp"
                    />
                <!--英雄經驗本-->
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        >
                        <com.gamebot.sdk.view.CheckBoxEx
                            android:id="@+id/cb_jingyanben"
                            style="?android:checkboxStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="英雄經驗本"
                            app:defaultValue="false"
                            app:uniqueKey="英雄經驗本" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:id="@+id/ll_jingyanben"
                        android:visibility="gone"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="40dp"
                            android:paddingRight="40dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="英雄經驗本等級："
                                android:gravity="center"
                                />
                            <LinearLayout
                                android:layout_height="30dp"
                                android:layout_width="wrap_content"
                                android:paddingLeft="10dp"
                                >
                                <com.gamebot.botdemo.view.SpinnerExd
                                    style="?android:spinnerStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#fff"
                                    app:defaultIndex="0"
                                    app:listArray="EASY,NORMAL,HARD,VERYHARD,EXTREME,MANIAC"
                                    app:uniqueKey="英雄經驗本等級"
                                    app:valueFromList="true" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <!--英雄狗糧本-->
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        >
                        <com.gamebot.sdk.view.CheckBoxEx
                            android:id="@+id/cb_gouliangben"
                            style="?android:checkboxStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="英雄狗糧本"
                            app:defaultValue="false"
                            app:uniqueKey="英雄狗糧本" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:id="@+id/ll_gouliangben"
                        android:visibility="gone"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="40dp"
                            android:paddingRight="40dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="英雄狗糧本等級："
                                android:gravity="center"
                                />
                            <LinearLayout
                                android:layout_height="30dp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:paddingLeft="5dp"
                                >
                                <com.gamebot.botdemo.view.SpinnerExd
                                    style="?android:spinnerStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#fff"
                                    app:defaultIndex="0"
                                    app:listArray="EASY,NORMAL,HARD,VERYHARD,EXTREME,MANIAC"
                                    app:uniqueKey="英雄狗糧本等級"
                                    app:valueFromList="true" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <!--低級金幣本-->
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        >
                        <com.gamebot.sdk.view.CheckBoxEx
                            android:id="@+id/cb_dijijinbiben"
                            style="?android:checkboxStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="低級金幣本"
                            app:defaultValue="false"
                            app:uniqueKey="低級金幣本" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:id="@+id/ll_dijijinbiben"
                        android:visibility="gone"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="40dp"
                            android:paddingRight="40dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="低級金幣本等級："
                                android:gravity="center"
                                />
                            <LinearLayout
                                android:layout_height="30dp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:paddingLeft="5dp"
                                >
                                <com.gamebot.botdemo.view.SpinnerExd
                                    style="?android:spinnerStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#fff"
                                    app:defaultIndex="0"
                                    app:listArray="EASY,NORMAL,HARD,VERYHARD,EXTREME,MANIAC"
                                    app:uniqueKey="低級金幣本等級"
                                    app:valueFromList="true" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <!--裝備升級本-->
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        >
                        <com.gamebot.sdk.view.CheckBoxEx
                            android:id="@+id/cb_taiyangben"
                            style="?android:checkboxStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="裝備升級本"
                            app:defaultValue="false"
                            app:uniqueKey="裝備升級本" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:id="@+id/ll_taiyangben"
                        android:visibility="gone"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="40dp"
                            android:paddingRight="40dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="裝備升級本等級："
                                android:gravity="center"
                                />
                            <LinearLayout
                                android:layout_height="30dp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:paddingLeft="5dp"
                                >
                                <com.gamebot.botdemo.view.SpinnerExd
                                    style="?android:spinnerStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#fff"
                                    app:defaultIndex="0"
                                    app:listArray="EASY,NORMAL,HARD,VERYHARD,EXTREME,MANIAC"
                                    app:uniqueKey="裝備升級本等級"
                                    app:valueFromList="true" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <!--裝備升星本-->
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        >
                        <com.gamebot.sdk.view.CheckBoxEx
                            android:id="@+id/cb_yueliangben"
                            style="?android:checkboxStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="裝備升星本"
                            app:defaultValue="false"
                            app:uniqueKey="裝備升星本" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:id="@+id/ll_yueliangben"
                        android:visibility="gone"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="40dp"
                            android:paddingRight="40dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="裝備升星本等級："
                                android:gravity="center"
                                />
                            <LinearLayout
                                android:layout_height="30dp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:paddingLeft="5dp"
                                >
                                <com.gamebot.botdemo.view.SpinnerExd
                                    style="?android:spinnerStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#fff"
                                    app:defaultIndex="0"
                                    app:listArray="EASY,NORMAL,HARD,VERYHARD,EXTREME,MANIAC"
                                    app:uniqueKey="裝備升星本等級"
                                    app:valueFromList="true" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <!--英雄升星本-->
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        >
                        <com.gamebot.sdk.view.CheckBoxEx
                            android:id="@+id/cb_xingxingben"
                            style="?android:checkboxStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="英雄升星本"
                            app:defaultValue="false"
                            app:uniqueKey="英雄升星本" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:id="@+id/ll_xingxingben"
                        android:visibility="gone"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="40dp"
                            android:paddingRight="40dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="英雄升星本等級："
                                android:gravity="center"
                                />
                            <LinearLayout
                                android:layout_height="30dp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:paddingLeft="5dp"
                                >
                                <com.gamebot.botdemo.view.SpinnerExd
                                    style="?android:spinnerStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#fff"
                                    app:defaultIndex="0"
                                    app:listArray="EASY,NORMAL,HARD,VERYHARD,EXTREME,MANIAC"
                                    app:uniqueKey="英雄升星本等級"
                                    app:valueFromList="true" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <!--高級金幣本-->
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        >
                        <com.gamebot.sdk.view.CheckBoxEx
                            android:id="@+id/cb_gaojijinbiben"
                            style="?android:checkboxStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="高級金幣本"
                            app:defaultValue="false"
                            app:uniqueKey="高級金幣本" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:id="@+id/ll_gaojijinbiben"
                        android:visibility="gone"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="40dp"
                            android:paddingRight="40dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="高級金幣本等級："
                                android:gravity="center"
                                />
                            <LinearLayout
                                android:layout_height="30dp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:paddingLeft="5dp"
                                >
                                <com.gamebot.botdemo.view.SpinnerExd
                                    style="?android:spinnerStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#fff"
                                    app:defaultIndex="0"
                                    app:listArray="HARD,VERYHARD,EXTREME,MANIAC"
                                    app:uniqueKey="高級金幣本等級"
                                    app:valueFromList="true" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>